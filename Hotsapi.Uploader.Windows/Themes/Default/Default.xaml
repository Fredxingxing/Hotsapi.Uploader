<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Hotsapi specific brushes -->
    <SolidColorBrush x:Key="UpdateAvailableTextBrush" Color="Orange" />
    <SolidColorBrush x:Key="FileDeletedIconBrush" Color="DarkRed" />
    
    <!-- Upload statuses -->
    <SolidColorBrush x:Key="StatusUploadInProgressBrush" Color="Orange" />
    <SolidColorBrush x:Key="StatusUploadSuccessBrush" Color="Green" />
    <SolidColorBrush x:Key="StatusUploadNeutralBrush" Color="DarkGray" />
    <SolidColorBrush x:Key="StatusUploadFailedBrush" Color="Red" />

</ResourceDictionary>